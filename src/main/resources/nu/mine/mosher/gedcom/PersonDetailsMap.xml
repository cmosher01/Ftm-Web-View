<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nu.mine.mosher.gedcom.PersonDetailsMap">
    <!-- TODO how to get/display media attached directly to a Person? -->
    <!-- TODO (SELECT AmtID FROM Sync_Person S WHERE S.FtmID = Person.ID) AS ancestryPersonID -->
<!--    SS.TreeID AS ancestryTreeID-->
<!--    LEFT OUTER JOIN Sync_State SS-->

    <resultMap id="result" type="nu.mine.mosher.gedcom.Person" autoMapping="false">
        <!-- workaround for https://github.com/mybatis/mybatis-3/issues/2207 -->
        <constructor>
          <arg column="id" name="id"/>
          <arg column="nameWithSlashes" name="nameWithSlashes"/>
          <arg column="pkid" name="pkid"/>
          <arg column="lastmod" name="lastmod"/>
        </constructor>
    </resultMap>

    <select id="select" resultMap="result">
        SELECT
            Person.PersonGUID AS id,
            NameFact.Text AS nameWithSlashes,
            Person.ID AS pkid,
            Person.UpdateDate AS lastmod
        FROM
            Person LEFT OUTER JOIN
            Fact AS NameFact ON (NameFact.ID = Person.NameFactID)
        WHERE
            Person.PersonGUID = #{id}
    </select>
</mapper>
